{
  "name": "obsidian-journal",
  "version": "1.3.0",
  "description": "Journal plugin for Obsidian (https://obsidian.md)",
  "main": "main.js",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "ts-check": "tsc --noEmit -skipLibCheck",
    "changelog": "npx git-cliff --output CHANGELOG.md",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:srg-kostyrko/obsidian-journal.git"
  },
  "keywords": [
    "Obsidian",
    "plugin",
    "journal"
  ],
  "author": "Sergii Kostyrko",
  "license": "MIT",
  "dependencies": {
    "@flatten-js/interval-tree": "^1.1.2",
    "obsidian": "^1.5.7-1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "git-cliff": "^2.0.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.2.8",
    "vite-plugin-static-copy": "^1.0.2",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.{ts,mjs,js,css,md}": "prettier --write"
  }
}
